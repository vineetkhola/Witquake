<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030200"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/witquakelogo"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tagline_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/corben"
        android:text="@string/tagline_1"
        android:textColor="#D1AF6A"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584">
    </TextView>

    <TextView
        android:id="@+id/tagline_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/corben"
        android:text="@string/tagline_2"
        android:textColor="#D1AF6A"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>